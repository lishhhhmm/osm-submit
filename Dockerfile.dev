# Development Dockerfile with Vite dev server and HTTPS
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port 3000 (HTTPS)
EXPOSE 3000

# Start Vite dev server with HTTPS
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
